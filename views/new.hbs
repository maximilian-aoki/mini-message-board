    <label for="user">User: </label>
    <input type="text" name="user" id="user" />
  </div>
  <div>
    <label for="text">Message: </label>
    <textarea name="text" id="text" cols="30" rows="10"></textarea>
  </div>
  <input type="submit" value="Submit Message" />
</form>
